@model IEnumerable<ProjetoWebMvc.Models.Seller>


@{
    ViewData["Title"] = "Sellers";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-default" style="background-color: lightcyan">Create New</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="background-color: lightcyan">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="background-color: lightcyan">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="background-color: lightcyan">
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th style="background-color: lightcyan">
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th style="background-color: lightcyan"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>








